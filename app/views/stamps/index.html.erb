<h3 class="title">My Catalogs</h3>
<%= link_to "France", "/stamps?issuer=France", class: "btn btn-large btn-primary" %>
<%= link_to "France > Alexandretta", "/stamps?issuer=France > Alexandretta", class: "btn btn-large btn-primary" %>
<%= link_to "GB Concise", "/stamps?country_name=Great Britain", class: "btn btn-large btn-primary" %>
<hr>

<%= form_tag search_stamps_path, method: 'get' do %>
    <div class="input-group">
      <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: 'Search...' %>

      <span class="input-group-btn">
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </div>

<% end %>

<hr>

<% if @stamps.count > 0 %>

    <h3><%= @count %> stamps found.</h3>

    <%= paginate @stamps %>
    <ul class="users">
    <% @stamps.each do |stamp| %>

          <li>
            <%= link_to image_tag(stamp.local_image_url, alt: stamp.image_url, height: 64) %>
            <%= link_to stamp.issuer + ' SG ' + stamp.sg_number, set_path(stamp) %>
            <%= stamp.computed_description %>
          </li>

    <% end %>
    </ul>

    <div class="text-center">
      <%= paginate @stamps %>
    </div>

<% end %>

<hr>

<p style="text-align: center; margin-bottom: 21px">
  <%= link_to 'New Stamp', new_stamp_path, class: 'btn btn-primary', style: 'color: #fff' %>
</p>

</div>

