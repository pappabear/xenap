
  <h3 class="title">My Catalogs</h3>
  <%= link_to "France", "/stamps?catalog=france", class: "btn btn-large btn-primary" %>
  <%= link_to "GB Concise", "/stamps?catalog=Great Britain", class: "btn btn-large btn-primary" %>
  <hr>

  <%= form_tag search_stamps_path, method: 'get' do %>
      <div class="input-group">
        <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: 'Search...' %>

        <span class="input-group-btn">
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
      </div>

  <% end %>

  <hr>

  <% if @stamps.count > 0 %>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Country</th>
        <th>SG Number</th>
        <th>Description</th>
        <th>Representative Image</th>
        <th>Catalog Price Used (GBP)</th>
        <th>Catalog Price Unused (GBP)</th>
        <th>Admin</th>
      </tr>
      </thead>

      <tbody>

      <% @stamps.__send__ controller.action_name == 'search' ? :each_with_hit : :each do |stamp, hit| %>
          <tr>
            <td><%= hit.try(:highlight).try(:country_name) ? hit.highlight.country_name.join.html_safe : stamp.country_name %></td>
            <td><%= link_to stamp.sg_number, set_path(stamp) %></td>
            <td><%= stamp.computed_description %></td>
            <td class="text-center"><%= image_tag(stamp.local_image_url, alt: stamp.image_url, height: 64) %></td>
            <td><%= stamp.stamp_used %></td>
            <td><%= stamp.stamp_unused %></td>
            <td>
              <%= link_to 'Edit', edit_stamp_path(stamp), class: 'btn btn-success' %>
            </td>
          </tr>
      <% end %>

      </tbody>
    </table>

    <div class="text-center">
      <%= paginate @stamps %>
    </div>

    <% end %>

    <hr>

    <p style="text-align: center; margin-bottom: 21px">
      <%= link_to 'New Stamp', new_stamp_path, class: 'btn btn-primary', style: 'color: #fff' %>
    </p>

  </div>

